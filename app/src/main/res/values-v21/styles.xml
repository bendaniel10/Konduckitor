<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- extend one of the Theme.AppCompat themes -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- customize the color palette -->
        <item name="colorPrimary">@color/app_color_primary</item>
        <item name="colorPrimaryDark">@color/app_color_dark</item>
        <item name="colorAccent">@color/app_color_accent</item>
        <item name="android:colorButtonNormal">@color/app_button_color</item>
        <item name="android:buttonStyle">@style/AppButton</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:editTextStyle">@style/AppEditText</item>
        <item name="android:textViewStyle">@style/AppTextView</item>
        <item name="android:spinnerStyle">@style/AppSpinner</item>
        <item name="android:imageButtonStyle">@style/AppImageButton</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItemStyle</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="SpinnerItemStyle" parent="Base.TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:textSize">@dimen/spinner_item_size</item>
        <item name="fontPath">fonts/SF_Atarian_System.ttf</item>
    </style>


    <style name="AppButton" parent="android:Widget.Material.Button">
        <item name="android:textColor">@color/white</item>
        <item name="fontPath">fonts/SF_Atarian_System_Bold.ttf</item>
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppImageButton" parent="android:Widget.Material.ImageButton">
        <item name="background">@android:color/transparent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="AppEditText" parent="android:Widget.EditText">
        <!--<item name="android:background">@color/white</item>-->
        <item name="android:height">45dp</item>
        <item name="android:textColor">@color/edit_text_color</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="AppTextView" parent="Base.Widget.AppCompat.TextView.SpinnerItem">
        <item name="fontPath">fonts/SF_Atarian_System.ttf</item>
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:textColor">@color/text_body</item>

    </style>

    <style name="AppSpinner" parent="Widget.AppCompat.Spinner.Underlined">
        <!--<item name="android:background">@color/white</item>-->
        <item name="android:popupBackground">@color/spinner_popup_background</item>
        <item name="android:layout_width">match_parent</item>
    </style>

</resources>
