<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:visibility="gone"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/done"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/pass_image" />



        <ImageView
            android:scaleType="fitXY"
            android:layout_marginTop="20dp"
            android:src="@drawable/lekki_level"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/level_image" />

        <ImageView
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/locked"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/locked_image" />
        <RelativeLayout
            android:background="@drawable/app_button_right"
            android:padding="10dp"
            android:layout_marginTop="-80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/level_image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:textColor="@color/white"
                android:id="@+id/level_name"
                android:text="OSHODI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@id/level_name"
                android:layout_toRightOf="@id/level_name"
                android:id="@+id/level_progress"
                android:text="3 / 21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>