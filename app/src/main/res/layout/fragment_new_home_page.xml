<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/container_padding"
    tools:context="com.bentechapps.konduckitor.activity.fragments.HomePageFragement">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/moneyTxt"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/touch_target_size"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="start"
            android:gravity="center_vertical"
            android:text="1000" />

        <ImageButton
            android:id="@+id/soundButton"
            android:layout_width="@dimen/touch_target_size"
            android:layout_height="@dimen/touch_target_size"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"
            android:scaleType="centerInside"
            android:src="@drawable/sound" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom"
        android:layout_below="@id/top"
        android:layout_marginTop="@dimen/content_spacing">

        <ImageView
            android:id="@+id/heroImg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_hero_height"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_launcher" />

        <ImageButton
            android:src="@android:drawable/ic_media_play"
            android:id="@+id/playButton"
            android:layout_width="@dimen/home_play_button_size"
            android:layout_height="@dimen/home_play_button_size"
            android:layout_below="@id/heroImg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/large_content_spacing" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/content_spacing"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageButton
            android:scaleType="centerInside"
            android:src="@drawable/share"
            android:id="@+id/connectBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/touch_target_size"
            android:layout_weight="1" />

        <ImageButton
            android:scaleType="centerInside"
            android:src="@drawable/shop"
            android:id="@+id/shopButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/touch_target_size"
            android:layout_weight="1" />

        <ImageButton
            android:scaleType="centerInside"
            android:src="@drawable/settings"
            android:id="@+id/settingsBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/touch_target_size"
            android:layout_weight="1" />
    </LinearLayout>

</RelativeLayout>