<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white_alice_blue"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3400"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="40sp"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:id="@+id/reputationTextView"
        style="?android:textAppearanceLarge" />

    <ListView
        android:id="@android:id/list"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/reputationTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/money"
        android:textColor="@color/black_overlay"
        android:id="@+id/textView2"
        android:layout_above="@android:id/list"
        android:layout_toRightOf="@+id/reputationTextView"
        android:layout_toEndOf="@+id/reputationTextView" />
</RelativeLayout>