<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bentechapps.konduckitor.activity.fragments.ChooseLevelFragment">

    <com.bentechapps.konduckitor.view.custom.HeaderControls
        android:id="@+id/header_controls"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@android:id/list"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/header_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
