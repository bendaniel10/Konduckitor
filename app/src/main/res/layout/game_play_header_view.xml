<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black">

    <ImageView
        android:layout_marginLeft="2dp"
        android:id="@+id/timer_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/timer" />


    <TextView
        android:id="@+id/run_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/timer_image"
        android:layout_toRightOf="@id/timer_image"
        android:text="360"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white" />

    <ImageView
        android:layout_marginLeft="2dp"
        android:id="@+id/health_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/run_time"
        android:layout_toRightOf="@id/run_time"
        android:src="@drawable/health" />

    <TextView
        android:id="@+id/health"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/health_image"
        android:text="360"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white" />


    <ImageView
        android:id="@+id/score_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/points"
        android:layout_toLeftOf="@+id/points"
        android:src="@drawable/trophy" />

    <TextView
        android:id="@+id/points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/pause_button"
        android:layout_toStartOf="@+id/pause_button"
        android:gravity="end"
        android:text="4000"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white" />

    <ImageButton
        android:padding="0dp"
        android:id="@+id/pause_button"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:background="@android:color/transparent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/pause"
        android:src="@drawable/pause" />

</RelativeLayout>
